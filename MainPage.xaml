<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DormitoryApp.MainPage"
    Title="XML Dormitory Analyzer">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="16">

            <!-- HEADER -->
            <Label Text="Обробка XML-файлу «Гуртожиток»"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Load XML file -->
            <Button x:Name="loadXmlButton"
                    Text="Вибрати XML файл"
                    BackgroundColor="#FF1860FD"/>

            <Label Text="Файл:"
                   FontAttributes="Bold"/>
            <Label x:Name="xmlFileLabel"
                   Text="(не вибрано)"/>

            <!-- Strategy selection -->
            <Label Text="Метод аналізу (Strategy):"
                   FontAttributes="Bold"/>
            <Picker x:Name="strategyPicker"
                    Title="Оберіть метод">
                <Picker.Items>
                    <x:String>SAX</x:String>
                    <x:String>DOM</x:String>
                    <x:String>LINQ to XML</x:String>
                </Picker.Items>
            </Picker>

            <!-- Faculty -->
            <Label Text="Факультет:"
                   FontAttributes="Bold"/>
            <Picker x:Name="facultyPicker"
                    Title="Оберіть факультет"/>

            <!-- Department -->
            <Label Text="Кафедра:"
                   FontAttributes="Bold"/>
            <Entry x:Name="departmentEntry"
                   Placeholder="Наприклад: Computer Science"/>

            <!-- Course -->
            <Label Text="Курс:"
                   FontAttributes="Bold"/>
            <Entry x:Name="courseEntry"
                   Placeholder="Наприклад: 2"
                   Keyboard="Numeric"/>

            <!-- Keyword -->
            <Label Text="Пошук за ключовим словом (ПІБ):"
                   FontAttributes="Bold"/>
            <Entry x:Name="keywordEntry"
                   Placeholder="Наприклад: Богдан Іваненко"/>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="12">
                <Button x:Name="searchButton"
                        Text="Пошук"
                        BackgroundColor="#4CAF50"
                        TextColor="White"/>

                <Button x:Name="clearButton"
                        Text="Очистити"
                        BackgroundColor="#FF9800"
                        TextColor="White"/>
            </HorizontalStackLayout>

            <!-- Transform to HTML -->
            <Button x:Name="transformButton"
                    Text="Перетворити XML у HTML"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>

             <Button x:Name="exitButton"
                    Text="Вихід"
                    BackgroundColor="#F44336"
                    TextColor="White"/>
                    
            <!-- Results -->
            <Label Text="Результати:"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,20,0,0"/>

            <CollectionView x:Name="resultsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               Margin="0,8"
                               Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name, StringFormat='ПІБ: {0}'}"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Faculty, StringFormat='Факультет: {0}'}"/>
                                <Label Text="{Binding Department, StringFormat='Кафедра: {0}'}"/>
                                <Label Text="{Binding Course, StringFormat='Курс: {0}'}"/>
                                <Label Text="{Binding Room, StringFormat='Кімната: {0}'}"/>
                                <Label Text="{Binding Bed, StringFormat='Ліжко: {0}'}"/>
                                <Label Text="{Binding StartDate, StringFormat='Початок проживання: {0}'}"/>
                                <Label Text="{Binding EndDate, StringFormat='Кінець проживання: {0}'}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
